[Unit]
Description=SeaweedFS filer server
Wants=network.target
After=seaweedfs-master.service

[Service]
Type=simple
ExecStart=/usr/sbin/weed filer -port {{ seaweedfs_filer_port }} -master localhost:{{ seaweedfs_master_port }}
User=seaweed
Group=seaweed
Restart=on-failure

[Install]
WantedBy=multi-user.target
