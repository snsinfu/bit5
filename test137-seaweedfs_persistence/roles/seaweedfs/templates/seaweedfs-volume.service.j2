[Unit]
Description=SeaweedFS volume server
Wants=network.target
After=seaweedfs-master.service

[Service]
Type=simple
ExecStart=/usr/sbin/weed volume -port {{ seaweedfs_volume_port }} -mserver localhost:{{ seaweedfs_master_port }} -dir /var/lib/seaweedfs/volume
User=seaweed
Group=seaweed
Restart=on-failure

[Install]
WantedBy=multi-user.target
